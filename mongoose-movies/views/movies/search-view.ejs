<a href="/products/value"> A List Celebrities </a> -->

<% if (typeof movies !== 'undefined') { %>
  <h2> Results </h2>
  <ul>
    <% movies.forEach((oneMovie) => { %>
      <li>
        <h3> <%= oneMovie.name %> </h3>
        <p> Genre: $<%= oneMovie.genre %> </p>
        <a href="/movies/<%= oneMovie._id %>">
          View Details
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
