<h2> Edit Movie </h2>

<% if (typeof validationErrors !== 'undefined') { %>
  <ul>
    <% for (key in validationErrors) { %>
    <li>  <%= validationErrors[key].message %> </li>
    <% } %>
  </ul>
<% } %>
<br>

<form method="post" action="/movies/<%= movies._id %>">
  <label for="movie-title-input"> Title </label>
  <input id="movie-title-input" type="text"
        name="movieTitle" value="<%= movies.title %>">
    <br>
    <label for="movie-genre-input"> Genre </label>
    <input id="movie-genre-input" type="text"
          name="movieGenre" value="<%= movies.genre %>">
    <br>
  <label for="movie-plot-input"> Plot </label>
    <textarea id="movie-plot-input"
          name="moviePlot"> <%= movies.plot %> </textarea>
    <br>
  <button> Save </button>
</form>
